@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AddStudentModel

@using (Html.BeginForm("AddStudent", "Home", FormMethod.Post, new { student = Model }))
{
    <h3>Student Information</h3>
    <div>
        First name:
        @Html.TextBox("FirstName", Model.Student.FirstName)<br />
        Last name:
        @Html.TextBox("LastName", Model.Student.LastName)<br />
        Address:
        @Html.TextBoxFor(m => Model.Student.Address)<br />
        Major:
        @Html.TextBoxFor(m => m.Student.Major)<br />
        Expected Graduation:
        @Html.TextBoxFor(m => m.Student.Address, new { @type = "date" })<br />
        @Html.EnumDropDownListFor(m => m.Contact.Type)
        @Html.TextBoxFor(m => m.Contact.ContactInfo)<br />
    </div>
    <input type="submit" value="Add Student" />
}

